<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="examPU">
        <class>com.ea.exam.entity.Address</class>
        <class>com.ea.exam.entity.Bank</class>
        <class>com.ea.exam.entity.House</class>
        <class>com.ea.exam.entity.Owner</class>
        <class>com.ea.exam.entity.Person</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/exam?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="ea"/>
            <property name="jakarta.persistence.jdbc.password" value="cs544"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
